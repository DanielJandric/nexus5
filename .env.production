# Production Environment Variables
NODE_ENV=production
PORT=3000

# Database Configuration (will be set by cloud provider)
DATABASE_URL=postgresql://user:password@host:port/database
DB_SSL=true

# API Keys (to be configured in cloud dashboard)
OPENAI_API_KEY=your_openai_key_here
OPENWEATHER_API_KEY=your_openweather_key_here

# Application Settings
INIT_DB=true
CACHE_TTL=300000
MAX_CONNECTIONS=20

# Security
JWT_SECRET=your_jwt_secret_here
BCRYPT_ROUNDS=12

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true

# Features
ENABLE_AI=true
ENABLE_WEATHER=true
ENABLE_GEOCODING=true
ENABLE_NOTIFICATIONS=true

